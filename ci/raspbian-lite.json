{
  "variables": {},
  "builders": [{
    "type": "arm",
    "file_urls" : ["https://downloads.raspberrypi.org/raspbian/images/raspbian-2019-09-30/2019-09-26-raspbian-buster.zip"],
    "file_checksum_url": "https://downloads.raspberrypi.org/raspbian/images/raspbian-2019-09-30/2019-09-26-raspbian-buster.zip.sha256",
    "file_checksum_type": "sha256",
    "file_target_extension": "zip",
    "image_build_method": "resize",
    "image_path": "output/raspbian-lite.img",
    "image_size": "6G",
    "image_type": "dos",
    "image_partitions": [
      {
        "name": "boot",
        "type": "c",
        "start_sector": "8192",
        "filesystem": "vfat",
        "size": "256M",
        "mountpoint": "/boot"
      },
      {
        "name": "root",
        "type": "83",
        "start_sector": "532480",
        "filesystem": "ext4",
        "size": "0",
        "mountpoint": "/"
      }
    ],
    "image_setup_extra": [
      ["cp", "/build/bin/makerverse-docker.service", "$MOUNTPOINT/etc/systemd/system/"]
    ],
    "image_chroot_env": ["PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"],
    "qemu_binary_source_path": "/usr/bin/qemu-arm-static",
    "qemu_binary_destination_path": "/usr/bin/qemu-arm-static"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo touch /boot/ssh",
        "mkdir -p /home/pi/gcode"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "curl -sSL https://get.docker.com | sh",
        "sudo usermod -aG docker pi",
        "sudo systemctl enable docker",
        "sudo systemctl start docker",
        "while [[ ! $(sudo docker images) ]]; do echo 'waiting for docker to start...'; sleep 5; done",
        "sudo docker pull makerverse/core:latest",
        "sudo systemd enable makerverse-docker.service",
        "sudo systemd start makerverse-docker.service"
      ]
    }
  ]
}